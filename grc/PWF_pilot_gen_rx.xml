<?xml version="1.0"?>
<block>
  <name>pilot_gen_rx</name>
  <key>PWF_pilot_gen_rx</key>
  <category>PWF</category>
  <import>import PWF</import>
  <make>PWF.pilot_gen_rx($nt, $pilot_length, $pre_whiten, $pilot, $rfrom_file, $filename)</make>

  <param>
    <name>Number of Antennas</name>
    <key>nt</key>
    <type>int</type>
  </param>
  <param>
    <name>Pilot Length</name>
    <key>pilot_length</key>
    <type>int</type>
  </param>
  <param>
    <name>Pilot Sequence</name>
    <key>pilot</key>
    <type>raw</type>
  </param>
  <param>
    <name>pre_whiten</name>
    <key>pre_whiten</key>
    <type>raw</type>
  </param>
  <param>
    <name>Read Pilot From File</name>
    <key>rfrom_file</key>
    <value>True</value>
    <type>enum</type>
    <option>
    	<name>Yes</name>
      	<key>True</key>
    </option>
    <option>
      	<name>No</name>
      	<key>False</key>
    </option>
  </param>
  <param>
    <name>File</name>
    <key>filename</key>
    <type>file_open</type>
  </param>


  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$nt*$nt</vlen>
  </sink>

  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$nt</vlen>
  </source>
</block>
