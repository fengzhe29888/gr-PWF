<?xml version="1.0"?>
<block>
  <name>pilot_receive_tx_sync</name>
  <key>PWF_pilot_receive_tx_sync</key>
  <category>PWF</category>
  <import>import PWF</import>
  <make>PWF.pilot_receive_tx_sync($rfrom_file, $filename, $pilot_seq, $nt, $pilot_length,$NHAT, $frame_length, $weight)</make>

  <param>
    <name>Read Pilot From File</name>
    <key>rfrom_file</key>
    <value>True</value>
    <type>enum</type>
    <option>
    	<name>Yes</name>
      	<key>True</key>
    </option>
    <option>
      	<name>No</name>
      	<key>False</key>
    </option>
  </param>
  <param>
    <name>File</name>
    <key>filename</key>
    <type>file_open</type>
  </param>
  <param>
    <name>Pilots</name>
    <key>pilot_seq</key>
    <type>raw</type>
  </param>
  <param>
    <name>reverse noise</name>
    <key>NHAT</key>
    <type>raw</type>
  </param>
  <param>
    <name>Number of Antennas</name>
    <key>nt</key>
    <type>int</type>
  </param>
  <param>
    <name>Pilot Length</name>
    <key>pilot_length</key>
    <type>int</type>
  </param>
  <param>
    <name>Frame Length</name>
    <key>frame_length</key>
    <type>int</type>
  </param>
  <param>
    <name>Weight</name>
    <key>weight</key>
    <type>float</type>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$nt</vlen>
  </sink>
  <sink>
    <name>flag</name>
    <type>byte</type>
    <vlen>$1</vlen>
  </sink>
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$nt*$nt</vlen>
  </source>
</block>
